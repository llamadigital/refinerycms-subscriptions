<li class='clearfix record <%= cycle("on", "on-hover") %>'>
  <span class='title'>
    <%= link_to subscription.name, admin_subscription_url(subscription) %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag('delete.png'), admin_subscription_url(subscription),
              { :method => :delete, 
                :confirm => t('shared.admin.delete.message', :title => subscription.name) },
                :class => "cancel confirm-delete",
                :title => t('admin.subscriptions.delete') -%>

    <%= link_to refinery_icon_tag('zoom.png'), admin_subscription_url(subscription),
                :title => t('.read_subscription') -%>
  </span>
</li>
