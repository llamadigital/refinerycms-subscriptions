<% content_for :body_content_left do %>
  <div class='subscriptions'>
    <%=raw @page[Page.default_parts.first.to_sym] %>

    <%= form_for @subscription do |f| %>
      <%= render :partial => "/shared/admin/error_messages",
                 :locals => {
                   :object => @subscription,
                   :include_object_name => true
                 } %>
      <div class='field'>
        <%= f.required_label :name %>
        <%= f.text_field :name %>
      </div>
      <div class='field'>
        <%= f.required_label :email %>
        <%= f.text_field :email %>
      </div>
      <div class='actions'>
        <%= f.submit t('.send') %>
        <%= link_to t('.privacy_policy'), "/pages/privacy-policy", :id => "privacy_link" if RefinerySetting.find_or_set(:show_subscribe_privacy_link, false) %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render :partial => "/shared/content_page" %>

